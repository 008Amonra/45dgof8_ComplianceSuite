  <script>
    async function loadLanguage() {
      const lang = document.getElementById('languageSelect').value;
      const out = document.getElementById('output');

      if (!lang) {
        out.innerHTML = '<p>‚ö†Ô∏è Please select a language.</p>';
        return;
      }

      try {
        const res = await fetch(`./lang-packs/${lang}.json`);
        if (!res.ok) throw new Error('File not found');
        const data = await res.json();
        out.innerHTML = `<h2>${data.title}</h2><p>${data.description}</p>`;
      } catch (err) {
        out.innerHTML = '<p>‚ö†Ô∏è No content available for the selected language yet.</p>';
      }
    }
  </script>
